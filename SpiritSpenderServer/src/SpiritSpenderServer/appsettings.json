{
  "MongoDB": {
    "Database": "SpiritSpender",
    "Host": "localhost",
    "Port": 27017,
    "User": "root",
    "Password": "example"
  },
  "IoBroker": {
    "Enabled":  true,
    "ConnectionUrl": "http://iobroker2:8084",
    "ConnectionTimeout": 5
  },
  "CommonServerSettings": {
    "UseSimulation": "false"
  },
  "SerialCommunication": {
    "Port": "/dev/ttyAMA0",
    "BaudRate": 115200,
    "ReadTimeout": -1,
    "WriteTimeout": 1500
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "Microsoft.AspNetCore.Http.Connections": "Debug"
    }
  },
  "AllowedHosts": "*"
}
